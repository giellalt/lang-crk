!! ## Plains Cree pronouns

!! There are more pronoums to be added here.

LEXICON Pronoun !!= @CODE@

 Personal ;
 Interrogative ;
 Indefinite ;
 Demonstrative ;

LEXICON Personal !!= @CODE@ \\
niýa+Pron+Pers+1Sg:niýa # ; !!= @CODE@
kiýa+Pron+Pers+2Sg:kiýa # ; !!= @CODE@
wiýa+Pron+Pers+3Sg:wiýa # ;
niýanân+Pron+Pers+1Pl:niýanân # ;
kiýânaw+Pron+Pers+12Pl:kiýânaw # ;
kiýawâw+Pron+Pers+2Pl:kiýawâw # ;
wiýawâw+Pron+Pers+3Pl:wiýawâw # ;

nîsta+Pron+Pers+1Sg+Incl:nîsta # ;
kîsta+Pron+Pers+2Sg+Incl:kîsta # ;
wîsta+Pron+Pers+3Sg+Incl:wîsta # ;
nîstanân+Pron+Pers+1Pl+Incl:nîstanân # ;
kîstanaw+Pron+Pers+12Pl+Incl:kîstanaw # ;
kîstawâw+Pron+Pers+2Pl+Incl:kîstawâw # ;
wîstawâw+Pron+Pers+3Pl+Incl:wîstawâw # ;


LEXICON Interrogative  !!= @CODE@ \\
awîna+Pron+Interr+A+Sg:awîna # "who,whose" ; !!= @CODE@
awîniki+Pron+Interr+A+Pl:awîniki # "who" ; !!= @CODE@
awînihi+Pron+Interr+A+Obv:awînihi # "who" ; !!= @CODE@
awîniwâ+Pron+Interr+A+Obv:awîniwâ # "who" ; !!= @CODE@

kîkwây+Pron+Interr+A+Sg:kîkwây # "what" ; ! Wolvengrey
kîkwây+Pron+Interr+A+Pl:kîkwâyak # "what" ;
kîkwây+Pron+Interr+A+Obv:kîkwâya # "what" ;
kîkwây+Pron+Interr+I+Sg:kîkwây # "what" ;
kîkwây+Pron+Interr+I+Pl:kîkwâya # "what" ;

! Interrogative demonstratives
tâna+Pron+Interr+Dem+A+Sg:tâna # "which one" ;
tâniki+Pron+Interr+Dem+A+Pl:tâniki # "which ones" ;
tânihi+Pron+Interr+Dem+A+Obv:tânihi # "which one(s)" ;
tānima+Pron+Interr+Dem+I+Sg:tānima # "which one" ;
tânihi+Pron+Interr+Dem+I+Pl:tânihi # "which ones" ;

! Locative interrogative demonstratives
tâniwâ+Pron+Interr+Dem+Loc+A+Sg:tâniwâ # "where" ; ! Wolvengrey
tâniwêhkâk+Pron+Interr+Dem+Loc+A+Pl:tâniwêhkâk # "where" ;
tâniwêhâ+Pron+Interr+Dem+Loc+A+Obv:tâniwêhâ # "where" ;
tâniwê+Pron+Interr+Dem+Loc+I+Sg:tâniwê # "where" ;
tâniwêhâ+Pron+Interr+Dem+Loc+I+Pl:tâniwêhâ # "where" ;

