define EngNounMorphophonology [ [ y ">" s ] -> {ies} || \[ a | e | i | o | u ] _ [ .#. | " " | "," | ";" ]
,, [..] -> e || [ s | z | x | s h | c h ] ">" _ s [ .#. | " " | "," | ";" ] ] ;

define rmBoundary [ ">" -> 0 ] ;

regex [ EngNounInflection .o. EngIrregularNouns .o. EngNounMorphophonology .o. rmBoundary ] ;

